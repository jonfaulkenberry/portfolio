<div class="row">
	<div class="medium-12 columns">
		<% if @posts.empty? %>
			<p>There are no posts to show!</p>
		<% else %>
			<% @posts.each do |post| %>
				<article>
					<header>
						<h3><%= link_to post.title, post %></h3>
						<p>Posted by <%= post.author.email %></p>
					</header>
					<section>
						<%= post.body %>
					</section>
				</article>
				<hr />
	    <% end %>
		<% end %>
	</div>
</div>
