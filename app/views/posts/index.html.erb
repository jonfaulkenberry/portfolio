<div class="row">
	<div class="medium-12 columns">
		<h1>Listing posts</h1>

		<table>
		  <thead>
		    <tr>
		      <th>Title</th>
		      <th>Body</th>
		      <th></th>
		      <th></th>
		      <th></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @posts.each do |post| %>
		      <tr>
		        <td><%= post.title %></td>
		        <td><%= post.body %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
