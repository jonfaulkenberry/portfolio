<div class="row">
  <div class="medium-12 columns">
    <% if policy_scope(@posts).empty? %>
      <h3>There are no posts to show!</h3>
    <% else %>
      <% policy_scope(@posts).each do |post| %>
        <article>
          <header>
            <h3><%= link_to post.title, post %></h3>
            <p>Posted by <%= post.author.email %></p>
          </header>
          <section>
            <%= markdown post.body %>
          </section>
        </article>
        <hr />
      <% end %>
    <% end %>
  </div>
</div>
