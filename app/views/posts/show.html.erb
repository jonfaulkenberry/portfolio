<div class="row">
	<div class="medium-12 columns">
		<p>
		  <strong>Title:</strong>
		  <%= @post.title %>
		</p>

		<% if not current_user.nil? %>
			<p>
				<%= link_to "Edit Post", edit_post_path(@post) %>
				<%= link_to "Delete Post", @post, :method => :delete, :confirm => "Are you sure?" %>
			</p>
		<% end %>

		<p>
		  <strong>Body:</strong>
		  <%= @post.body %>
		</p>

		<p id="author">
		  <b>By:</b>
		  <%= @post.author.email %>
		</p>

		<%= link_to 'Back', posts_path %>
	</div>
</div>
