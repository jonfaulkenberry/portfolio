<div class="row">
	<div class="medium-12 columns">
		<p>
		  <strong>Title:</strong>
		  <%= @post.title %>
		</p>
		<p id="author">
		  <b>By:</b>
		  <%= @post.author.email %>
		</p>
		<% if not current_user.nil? %>
			<p>
				<%= link_to "Edit Post", edit_post_path(@post), :class => "button tiny radius" %>
				<%= link_to "Delete Post", @post, :class => "button tiny radius alert", :method => :delete, :data => { :confirm => "Are you sure?" } %>
			</p>
		<% end %>
		<p>
		  <strong>Body:</strong>
		  <%= markdown @post.body %>
		</p>
		<%= link_to 'Back', posts_path %>
	</div>
</div>
