.row
  .medium-12.columns
    %h2= @project.name
    - if not current_user.nil?
      %p
        = link_to "Edit Project", edit_project_path(@project), :class => "button tiny radius"
        = link_to "Delete Project", @project, :class => "button tiny radius alert", :method => :delete, :data => { :confirm => "Are you sure?" }
    %p= raw "Tags: #{@project.tag_list.map{ |t| link_to t, project_tag_path(t) }.join( ', ')}"
    %p
      Technologies used: #{@project.technologies_used}