<div class="row">
	<div class="medium-12 columns">
		<h2><%= @project.name %></h2>
		<% if not current_user.nil? %>
			<p>
				<%= link_to "Edit Project", edit_project_path(@project), :class => "button tiny radius" %>
				<%= link_to "Delete Project", @project, :class => "button tiny radius alert", :method => :delete, :confirm => "Are you sure?" %>
			</p>
		<% end %>
		<p>Technologies used: <%= @project.technologies_used %>
	</div>
</div>
