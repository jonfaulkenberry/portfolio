<!-- INTRO -->
<section class="intro">
	<div class="row slide active">
		<div class="medium-12 columns">
			<h1>Web Developer</h1>
			<p>I'm Jon Faulkenberry, a Seattle-based Web developer</p>
			<p><a href="#contact" class="button small alert radius">Send Me a Message</a></p>
			<!-- Start: Slider -->
			<div class="csslider">
				<input type="radio" name="slides" id="slides_1" checked>
				<input type="radio" name="slides" id="slides_2">
				<ul>
					<li><%= image_tag('mac.png') %></li>
					<li><%= image_tag('mac.png') %></li>
				</ul>
				<!-- Buttons Control -->
				<div class="navigation">
					<div>
						<label for="slides_1"></label>
						<label for="slides_2"></label>
					</div>
				</div><!-- /.navigation -->
			</div><!-- /.csslider -->
			<!-- End: Slider -->			
		</div><!-- /.medium-12 .columns -->
	</div><!-- /.row -->	
</section><!-- /.intro -->

