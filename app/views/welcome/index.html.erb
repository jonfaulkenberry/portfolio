<style type="text/css" media="screen">
	body {
	  padding-top: 0.0rem !important;
	}
</style>

<!-- INTRO -->
<section class="intro">
	<div class="row">
		<div class="medium-12 columns">
			<h1 class="intro-text">Web Developer</h1>
			<p class="intro-text">I'm Jon Faulkenberry, a Seattle-based Web developer</p>
			<p>
				<%= link_to 'Send Me a Message', contact_path, :class => 'button small alert radius' %>
				<a href="https://github.com/jonfaulkenberry" class="button small alert radius">Follow Me on GitHub</a>
			</p>
			<!-- <%= image_tag('mac.png') %> -->
		</div><!-- /.medium-12 .columns -->
	</div><!-- /.row -->	
</section><!-- /.intro -->

<!-- ABOUT -->
<section id="about" class="about-wrapper">
	<div class="row">
		<div class="medium-12 columns">
			<h3>About Me</h3>
			<div class="line"></div>
			<div class="clearfix"></div>
		</div><!-- /.medium-12 .columns -->
	</div><!-- /.row -->
	<div class="col-progress">
		<div class="row">
			<div class="medium-4 columns">
				<h6>HTML5</h6>
				<div class="progress success round">
					<span class="meter" style="width: 90%"></span>
				</div><!-- /.progress -->
				<h6>CSS3</h6>
				<div class="progress success round">
					<span class="meter" style="width: 90%"></span>
				</div><!-- /.progress -->
				<h6>JavaScript</h6>
				<div class="progress round">
					<span class="meter" style="width: 80%"></span>
				</div><!-- /.progress -->
			</div><!-- /.medium-4 .columns -->
			<div class="medium-4 columns text-center">
				<div class="col-desc">
					<p>I'm a developer living in West Seattle. I enjoy spending time outdoors with my wife Leighann and our dog, Francis.</p>
					<%= image_tag('me.jpg') %>
				</div><!-- ./col-desc -->
			</div><!-- /.medium-4 .columns -->
			<div class="medium-4 columns">
				<h6>Ruby on Rails</h6>
				<div class="progress medium-12 round">
					<span class="meter" style="width: 80%"></span>
				</div><!-- /.progress -->
				<h6>ASP.NET</h6>
				<div class="progress medium-12 alert round">
					<span class="meter" style="width: 70%"></span>
				</div><!-- /.progress -->
				<h6>PHP &amp; MySQL</h6>
				<div class="progress medium-12 alert round">
					<span class="meter" style="width: 70%"></span>
				</div><!-- /.progress -->
			</div><!-- /.medium-4 .columns -->
		</div><!-- /.row -->
	</div><!-- /.col-progress -->
</section><!-- /.about-wrapper -->

<!-- CONTACT -->
<%= render 'welcome/contact' %>
